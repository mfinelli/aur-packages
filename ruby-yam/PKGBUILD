# Maintainer: Mario Finelli <mtfinelli at gmail dot com>
_gemname=yam
pkgname=ruby-$_gemname
pkgver=2.3.0
pkgrel=1
pkgdesc="A Ruby wrapper for accessing Yammer's REST API."
arch=(any)
url="https://github.com/yammer/yam"
license=('MIT')
depends=('ruby' 'ruby-addressable' 'ruby-multi_json' 'ruby-oauth2-client' 'ruby-oj'
	'ruby-rest-client')
makedepends=('rubygems')
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('5cfbe58f8fee2845571819c9dea4e39c')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" "$_gemname-$pkgver.gem"
}
